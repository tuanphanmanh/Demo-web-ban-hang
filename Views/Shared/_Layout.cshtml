    <script>
        var toggleSwitchtop = document.getElementById("toggleSwitchtop");
        toggleSwitchtop.addEventListener("change", function () {
            if (this.checked) {
                // Bật công tắt
                console.log("Đã bật công tắt");
                toggleDarkMode();
            } else {
                // Tắt công tắt
                console.log("Đã tắt công tắt");
                toggleDarkMode();
            }
        });

        var toggleDarkModeButton = document.getElementById('toggleSwitchtop');
        var appElement = document.getElementById('app');

        // Kiểm tra trạng thái chế độ tối từ localStorage khi trang web được tải
        if (localStorage.getItem('darkModeEnabled') === 'true') {
            appElement.classList.add('dark-mode');
            toggleSwitchtop.checked = true;
        }

        // Xử lý sự kiện khi người dùng nhấp vào nút chuyển đổi chế độ tối
        function toggleDarkMode() {
            appElement.classList.toggle('dark-mode');

            // Lưu trạng thái chế độ tối vào localStorage
            if (appElement.classList.contains('dark-mode')) {
                localStorage.setItem('darkModeEnabled', 'true');
            } else {
                localStorage.setItem('darkModeEnabled', 'false');
            }
        }

        //đến đây

        function scrollFunction() {
            var backButton = document.getElementById("back-to-top");
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                backButton.classList.add("show");
            } else {
                backButton.classList.remove("show", "animate");
            }
        }
        // Cuộn lên đầu trang khi nhấp vào nút quay lại đầu trang
        function scrollToTop() {
            var scrollDuration = 5; // Thời gian cuộn lên (ms)
            var scrollStep = -window.scrollY / (scrollDuration / 15);
            var scrollInterval = setInterval(function () {
                if (window.scrollY !== 0) {
                    window.scrollBy(0, scrollStep);
                } else {
                    clearInterval(scrollInterval);
                }
            }, 45);

            // Thêm hiệu ứng xoay tròn và từ từ chạy về đầu trang
            var backButton = document.getElementById("back-to-top");
            backButton.classList.add("animate");
        }
    </script>
