<script>
    var toggleSwitch = document.getElementById("toggleSwitch");
    toggleSwitch.addEventListener("change", function () {
        if (this.checked) {
            // Bật công tắt
            console.log("Đã bật công tắt");
        } else {
            // Tắt công tắt
            console.log("Đã tắt công tắt");
        }
    });
    // Hiển thị hoặc ẩn nút quay lại đầu trang dựa trên vị trí cuộn
    window.onscroll = function () { scrollFunction() };

    function scrollFunction() {
        var backButton = document.getElementById("back-to-top");
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            backButton.classList.add("show");
        } else {
            backButton.classList.remove("show", "animate");
        }
    }
    const toggleDarkModeButton = document.getElementById('toggleSwitch');
    const appElement = document.getElementById('app');

    toggleDarkModeButton.addEventListener('click', function () {
        appElement.classList.toggle('dark-mode');
    });
    // Cuộn lên đầu trang khi nhấp vào nút quay lại đầu trang
    function scrollToTop() {
        var scrollDuration = 500; // Thời gian cuộn lên (ms)
        var scrollStep = -window.scrollY / (scrollDuration / 15);
        var scrollInterval = setInterval(function () {
            if (window.scrollY !== 0) {
                window.scrollBy(0, scrollStep);
            } else {
                clearInterval(scrollInterval);
            }
        }, 15);

        // Thêm hiệu ứng xoay tròn và từ từ chạy về đầu trang
        var backButton = document.getElementById("back-to-top");
        backButton.classList.add("animate");
    }
</script>

