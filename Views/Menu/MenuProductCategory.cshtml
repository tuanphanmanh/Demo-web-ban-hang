@model IEnumerable<WebBanHangOnline.Models.EF.ProductCategory>

@if (Model != null && Model.Any())
            {
                <div class="banner">
                    <div class="container">
                        <div class="row">
                            @foreach(var item in Model)
                {
                    <div class="col-md-4" style="margin-bottom: 10px;">
                        <a href="/danh-muc-san-pham/@item.Alias-@(item.Id)">
                            <div class="banner_item align-items-center" style="background-image: url(@item.Icon); border-right: 1px solid black">
                            </div>

                        </a>
                    </div>
                }
                        </div>
                    </div>
                </div>
            }