            <style>
                .flex-container {
                    display: flex;
                    justify-content: space-between;
                    flex-wrap: wrap;
                }

                .flex-item {
                    flex-grow: 1;
                    margin-right: 10px; /* Để tạo khoảng cách giữa các cột */
                }
                .modal {
                    display: none; /* Ẩn modal mặc định */
                    position: fixed; /* Vị trí cố định trên màn hình */
                    z-index: 1; /* Đảm bảo modal hiển thị trên các phần tử khác */
                    left: 0;
                    top: 0;
                    width: 100%;
                    height: 100%;
                    overflow: auto; /* Cho phép cuộn nếu nội dung dài */
                    background-color: rgba(0, 0, 0, 0.5); /* Màu nền của modal */
                }

                .modal-content {
                    background-color: white;
                    margin: 15% auto; /* Căn giữa modal */
                    padding: 20px;
                    border: 1px solid;
                    width: 50%;
                }

                .close {
                    color: #aaa;
                    float: right;
                    font-size: 28px;
                    font-family: 'Times New Roman';
                    font-weight: bold;
                }

                    .close:hover,
                    .close:focus {
                        color: black;
                        text-decoration: none;
                        cursor: pointer;
                    }
            </style>

            <script>

                // Lấy tham chiếu đến modal
                var modal = document.getElementById("modal");
                var closeBtn = document.getElementsByClassName("close")[0];
                var openModalButton = document.getElementById("openModalButton");

                // Hiển thị modal khi trang được tải
                window.onload = function () {
                    modal.style.display = "block";
                };

                // Ẩn modal khi người dùng nhấp vào nút đóng
                closeBtn.onclick = function () {
                    modal.style.display = "none";
                };

                // Ẩn modal khi người dùng nhấp chuột bên ngoài modal
                window.onclick = function (event) {
                    if (event.target == modal) {
                        modal.style.display = "none";
                    }
                };

                openModalButton.onclick = function () {
                    modal.style.display = "block";
                };

            </script>

