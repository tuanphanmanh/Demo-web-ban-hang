@model WebBanHangOnline.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu?";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<link href="~/Content/template/StyleSheet1.css" rel="stylesheet" />
<script src="~/Content/template/abc.js"></script>
<div class="container" style="margin-top:300px; margin-bottom: 300px; ">
    <div class="row" data-bs-theme="info">
        <div class="col-md-4"></div>
        <div class="col-md-4" style="border-radius: 50px; padding: 30px; box-shadow: 0 40px 50px darkred; border: 2px solid #d3e1e2 ">
            <h2 class="text-center">quên mật khẩu</h2>
            <section id="loginForm">
                <div style="height: 2px; background-color: darkred; "></div> <br />

                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="row">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "email" })
                        </div>

                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6">
                            <a href="/account/login" style="width: 100%" class="btn btn-outline-success rounded-pill">Đăng nhập <i class="fa fa-sign-in" aria-hidden="true"></i></a>
                        </div>
                        <div class="col-md-6">
                            <button type="submit" style="width: 100%" class="btn btn-danger rounded-pill">Gửi yêu cầu <i class="fa fa-send" aria-hidden="true"></i></button>
                        </div>

                    </div>

                }
            </section>
        </div>
    </div>
</div>



