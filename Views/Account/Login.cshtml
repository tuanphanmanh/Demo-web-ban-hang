﻿@using WebBanHangOnline.Models
@model LoginViewModel
@{
    ViewBag.Title = "Đăng nhập";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="container" style="margin-top:160px">
    <div class="row" data-bs-theme="info">
        <div class="col-md-7">
            <h2 class="text-center">@ViewBag.Title</h2>
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <hr />
                        @Html.Label("Tên đăng nhập")
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Mật khẩu")
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.Label("Ghi nhớ")
                                </div>
                            </div>
                            <div class="col-md-6" style="text-align: right">
                                <a style="color:darkred" href="/account/ForgotPassword">Quên mật khẩu?</a>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <input type="submit" value="Đăng nhập" style="min-width: 100%" class="btn btn-success rounded-pill" />
                            </div>
                            <div class="col-md-6">
                                <a class="btn btn-outline-info rounded-pill" style="width: 100%" href="/account/register">
                                    Đăng ký
                                    <i class="fa fa-users" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                }
            </section>
        </div>

        <div class="col-md-5">
            <!-- Carousel -->
            <div id="demo" class="carousel slide" data-bs-ride="carousel">

                <!-- Indicators/dots -->
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
                </div>

                <!-- The slideshow/carousel -->
                <div class="carousel-inner ">
                    <div class="carousel-item active">
                        <img src="~/Content/assets/images/login customer.png" alt="Los Angeles" class="d-block" style="width:100%">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/assets/images/login customer 2.png .png" alt="Chicago" class="d-block" style="width:100%">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/assets/images/login customer 3 .png" alt="New York" class="d-block" style="width:100%">
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}