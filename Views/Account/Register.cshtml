@model WebBanHangOnline.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="container" style="margin-top:180px">
    <div class="row" data-bs-theme="info">
        <div class="col-md-7">
            <h2 class="text-center">@ViewBag.Title</h2>
            <section>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.Label("Email")
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        @Html.Label("Mật khẩu")
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        @Html.Label("Xác nhận mật khẩu")
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control"})

                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <a class="btn btn-outline-success rounded-pill" style="width: 100%" href="/account/login">
                                    Đăng nhập
                                    <i class="fa fa-sign-in" aria-hidden="true"></i>
                                </a>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" style="width: 100%" class="btn btn-info rounded-pill">
                                    Đăng ký
                                    <i class="fa fa-users" aria-hidden="true"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </section>
            

        </div>

        <div class="col-md-5">
            <div id="demo" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
                </div>

                <!-- The slideshow/carousel -->
                <div class="carousel-inner ">
                    <div class="carousel-item active">
                        <img src="~/Content/assets/images/login customer.png" alt="Los Angeles" class="d-block" style="width:100%">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/assets/images/login customer 2.png .png" alt="Chicago" class="d-block" style="width:100%">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/assets/images/login customer 3 .png" alt="New York" class="d-block" style="width:100%">
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}