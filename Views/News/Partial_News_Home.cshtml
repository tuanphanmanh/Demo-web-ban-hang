@model IEnumerable<WebBanHangOnline.Models.EF.News>

@if (Model != null && Model.Any())
{
    <div class="blogs">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <div class="section_title">
                        <h2>Thông tin</h2>
                    </div>
                </div>
            </div>
           
            <div class="row blogs_container">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 blog_item_col">
                        <div class="blog_item">
                            <div class="blog_background" style="background-image:url(@item.Image)"></div>
                            <div class="blog_content d-flex flex-column align-items-center justify-content-center text-center">
                                <h4 class="blog_title">@item.Title</h4>
                                <span class="blog_meta"> tác giả: @item.CreatedBy | @item.CreatedDate.ToString("dd-MM-yyyy")</span>
                                <a class="blog_more" href="#">Đọc thêm</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

}