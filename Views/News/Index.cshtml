@model IEnumerable<WebBanHangOnline.Models.EF.News>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<style>
    .news_section_container {
        margin-top: 200px;
    }
</style>
<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12" style="text-align: center">
            <h2>TIN TỨC</h2>
            <div style="background-color: forestgreen; height: 2px;"></div>
        </div>
    </div>
    <br />
    @if ( Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-3">
                    <div class="img-box">
                        <a href="/@item.Alias-@item.Id" title="@item.Title">
                            <img style="max-height: 100px; min-width: 200px" src="@item.Image" />
                        </a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="content-box">
                        <h4> <a href="/@item.Alias-n@(item.Id)" title="@item.Title">@item.Title</a></h4>
                        <div class="description-box">
                            @item.Description - @item.Id

                        </div>
                    </div>
                </div>
            </div>
            <hr />
        }
    }

</div>
