@model WebBanHangOnline.Models.EF.Order

@using PagedList;


@section naviheader{

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/admin/order" class="nav-link">Đơn hàng</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link active" >Chi tiết đơn hàng</a>
        </li>
    </ul>

}
<div style="height:2px; background-color: darkslategrey"></div>
<br />

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="card-title">Chi tiết đơn hàng</h3>

                </div>
                <div class="col-md-6 text-right">
                    <a href="/admin/order/index" class="text-danger">
                        <i class="fa fa-reply" aria-hidden="true"></i>
                    </a>
                </div>
            </div>

        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <label>Mã đơn</label>
                    <p class="form-control">@Model.Code</p>
                </div>
                <div class="col-md-3">
                    <label>Ngày đặt</label>
                    <p class="form-control">@Model.CreatedDate.ToString("dd/MM/yyyy")</p>
                </div>
                <div class="col-md-3">
                    <label>Đơn vị vận chuyển</label>
                    <p class="form-control">@Model.ShippingUnit</p>
                </div>
                <div class="col-md-3">
                    <label>Hình thức thanh toán</label>
                    <p class="form-control">@Model.TypePayment</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label>Tên khách hàng</label>
                    <p class="form-control">@Model.CustomerName</p>
                </div>
                <div class="col-md-3">
                    <label>Địa chỉ</label>
                    <p class="form-control">@Model.Address <b>(@Model.AddressType)</b></p>
                </div>
                <div class="col-md-3">
                    <label>SĐT</label>
                    <p class="form-control">@Model.Phone</p>
                </div>
                <div class="col-md-3">
                    <label>Email</label>
                    <p class="form-control">@Model.Email</p>
                </div>
            </div>

            <div>
                <label>Sản phẩm</label>
            </div>
            @Html.Action("Partial_SanPham", "order", new { id = Model.Id })


        </div>


    </div>
    <!-- /.card -->

</section>
<!-- /.content -->