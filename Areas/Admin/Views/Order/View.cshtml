@model WebBanHangOnline.Models.EF.Order

@using PagedList;


@section naviheader{

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/admin/order" class="nav-link">Danh sách đơn hàng</a>
        </li>
    </ul>

}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h4>Danh sách đơn hàng</h4>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Danh sách đơn hàng</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chi tiết đơn hàng</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <label>Mã đơn</label>
                    <p class="form-control">@Model.Code</p>
                </div>
                <div class="col-md-3">
                    <label>Ngày đặt</label>
                    <p class="form-control">@Model.CreatedDate.ToString("dd/MM/yyyy")</p>
                </div>
                <div class="col-md-3">
                    <label>Đơn vị vận chuyển</label>
                    <p class="form-control">@Model.ShippingUnit</p>
                </div>
                <div class="col-md-3">
                    <label>Hình thức thanh toán</label>
                    <p class="form-control">@Model.TypePayment</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label>Tên khách hàng</label>
                    <p class="form-control">@Model.CustomerName</p>
                </div>
                <div class="col-md-3">
                    <label>Địa chỉ</label>
                    <p class="form-control">@Model.Address <b>(@Model.AddressType)</b></p>
                </div>
                <div class="col-md-3">
                    <label>SĐT</label>
                    <p class="form-control">@Model.Phone</p>
                </div>
                <div class="col-md-3">
                    <label>Email</label>
                    <p class="form-control">@Model.Email</p>
                </div>
            </div>

            <div>
                <label>Sản phẩm</label>
            </div>
            @Html.Action("Partial_SanPham","order", new {id = Model.Id})


        </div>
        <!-- /.card-body -->
        <div style="text-align: right" class="card-footer">
            <a  href="/admin/order/index" class="btn btn-danger">Quay lại</a>
        </div>

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->