@model IEnumerable<WebBanHangOnline.Models.EF.ProductDetail>

<link href="~/Content/assets/styles/tablecustome.css" rel="stylesheet" />
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">

@section naviheader{

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/productdetail" class="nav-link active">Chi tiết TSKT</a>
        </li>
    </ul>

}

<div style="height:2px; background-color: darkslategrey"></div>
<br />

<section class="content">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="card-title">Thông số kỹ thuật</h3>
                </div>
                <div class="col-md-6 text-right">
                    <a href="productdetail/add" class="btn btn-success">Nhập thông số KT<i class="fa fa-plus-circle" aria-hidden="true"></i></a>
                </div>
            </div>
        </div>
        <div class="card-body table-scroll" id="table-scroll" style="min-height: 700px !important;">
            <table id="myGrid main-table" class="main-table">
                <thead>
                    <tr style="text-align: center; width: 100%">
                        <th scope="col" style="background-color: #0a621c">Thông số<br /><br /><br /><br />Dòng xe</th>
                        <th scope="col">Đời xe</th>
                        <th scope="col">Loại số</th>
                        <th scope="col">Kích thước (DxRxC)</th>
                        <th scope="col">Khoảng sáng gầm xe</th>
                        <th scope="col">Bán kính vòng quay</th>
                        <th scope="col">Trọng lượng không tải</th>
                        <th scope="col">Trọng lượng toàn tải</th>
                        <th scope="col">Chiều rộng cơ sở</th>
                        <th scope="col">Loại động cơ</th>
                        <th scope="col">Kích thước lốp xe</th>
                        <th scope="col">Công suất tối đa</th>
                        <th scope="col">Hệ thống nhiên liệu</th>
                        <th scope="col">Số xy lanh</th>
                        <th scope="col">Bố trí xy lanh</th>
                        <th scope="col">Dung tích xy lanh</th>
                        <th scope="col">Hệ thống truyền động</th>
                        <th scope="col">Hộp số</th>
                        <th scope="col">Loại vành</th>
                        <th scope="col">Phanh trước</th>
                        <th scope="col">Phanh sau</th>
                        <th scope="col">Tiêu chuẩn khí thải</th>
                        <th scope="col">Mức tiêu thụ trong</th>
                        <th scope="col">Mức tiêu thụ ngoài</th>
                        <th scope="col">Mức tiêu thụ hỗn hợp</th>
                    </tr>
                </thead>
                <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="text-align: center">
                                <th scope="col">@item.Product.Title</th>
                                <td>@item.DoiXe</td>
                                <td>@item.LoaiSo</td>
                                <td>@item.KichThuoc</td>
                                <td>@item.KhoangSangGamXe</td>
                                <td>@item.BanKinhVongQUay</td>
                                <td>@item.WeightKhongTai</td>
                                <td>@item.WeightToanTai</td>
                                <td>@item.ChieuRongCoSo</td>
                                <td>@item.LoaiDongCo</td>
                                <td>@item.KichThuocLopXe</td>
                                <td>@item.CongSuatToiDa</td>
                                <td>@item.HeThongNhienLieu</td>
                                <td>@item.SoXyLanh</td>
                                <td>@item.BoTriXyLanh</td>
                                <td>@item.DungTichXyLanh</td>
                                <td>@item.HeThongTruyenDong</td>
                                <td>@item.HopSo</td>
                                <td>@item.LoaiVanh</td>
                                <td>@item.PhanhTruoc</td>
                                <td>@item.PhanhSau</td>
                                <td>@item.TieuChuanKhiThai</td>
                                <td>@item.MucTieuThuTrong</td>
                                <td>@item.MucTieuThuNgoai</td>
                                <td>@item.MucTieuThuHonHop</td>
                            </tr>
                        }
                </tbody>
            </table>
        </div>

</section>

