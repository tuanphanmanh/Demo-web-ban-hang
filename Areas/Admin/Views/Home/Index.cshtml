                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body" style="background-color: #cdddda; padding: 10px;">
            <div class="row homechu">
                @if (Model != null)
                {
                    var i = 0;
                    var ii = 0;
                    var iii = 0;
                    decimal doanhthu = 0;
                    DateTime d = DateTime.Now;
                    DateTime previousDate = d.AddDays(-30);
                    foreach (var item in Model)
