@using Microsoft.AspNet.Identity.EntityFramework
@model IdentityRole

@{
    ViewBag.Title = "Thêm mới quyền";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link"><i style="font-size: 20px; font-weight:bold; color:darkblue" class="fa fa-house-damage" aria-hidden="true"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/News" class="nav-link">Thêm mới quyền</a>
        </li>
    </ul>

}

<div style="height:2px; background-color: darkslategrey"></div>
<br />

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin thêm mới quyền</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "Role", FormMethod.Post))
            {
                @Html.ValidationSummary(false)
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-10">
                            <label>Tên quyền</label>
                            @Html.TextBoxFor(a => a.Name, new { @class = "form-control" })
                        </div>
                        <div class="col-md-2">
                            <a href="/admin/role" style="width:100%" class="btn btn-outline-danger">Quay lại</a>
                            <button type="submit" class="btn btn-success" style="width:100%">Thêm mới <i class="fa fa-check-square" aria-hidden="true"></i></button>
                        </div>
                    </div>
                </div>

            }
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
