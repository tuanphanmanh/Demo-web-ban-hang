@using Microsoft.AspNet.Identity.EntityFramework
@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Trang chủ admin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/News" class="nav-link active">Danh sách quyền</a>
        </li>
    </ul>

}

<div style="height:2px; background-color: darkslategrey"></div>
<br />

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách quyền</h3>

            <div class="card-tools">
                <a href="/admin/role/create" class="btn btn-success"><i class="fa fa-plus-circle" aria-hidden="true"></i></a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tên</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any() && Model != null)
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.Name</td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>

            </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            Dùng tài khoản được cấp quyền để sử dụng tính năng của trang admin
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
