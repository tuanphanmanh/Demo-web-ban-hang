@model IEnumerable<WebBanHangOnline.Models.EF.ProductImage>
@{
    ViewBag.Title = "Ảnh sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmty.cshtml";
}

<style>
    .glImage {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
    }

    glImage li {
        /*flex-direction:*/
        display: inline-block;
        position: relative;
    }

    .box-btn {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        text-align: center;
    }
</style>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Ảnh sản phẩm</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-danger" data-card-widget="collapse" title="Collapse">
                    Xóa hết
                </button>
                <input type="button" class="btn btn-success" value="Tải ảnh" onclick="BrowseServer('txtImage');" />

            </div>
        </div>
        <div class="card-body">
            <ul class="glImage">
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <li id="trow_@item.Id">
                            <img src="@item.Image" width="200" />
                            <div class="box-btn">
                                <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete"> <i class="fa fa-trash"></i> </a>

                                @if (item.IsDefault)
                                {
                                    <a href="#" data-id="@item.Id" class="btn btn-sm btn-success btnDefault"> <i class="fa fa-check"></i></a>
                                }
                                else
                                { 
                                    <a href="#" data-id="@item.Id" class="btn btn-sm btn-success btnDefault"> <i class="fa fa-cancel"></i></a>
                                }
                            </div>
                        </li>
                    }
                }

            </ul>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>


    <script>


        $(document).ready(function () {
            $('body').on('click', 'btnDelete', function () {
                var id = $(this).data('id');
                var conf = confirm("b có muốn xóa không?");
                if (conf === true) {
                    $.ajax({
                        url='/admin/productimage/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    })
                }
            })
        })
</script>


    <script>
                function BrowseServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                AddImage(@ViewBag.productId, fileUrl);
            };
            finder.popup();
        }

        function AddImage(id, url) {
            $.ajax({
                url: '/admin/productimage/AddImage',
                type: 'POST',
                data: { productId: id, url: url },
                success: function (rs) {
                    if (rs.Success) {
                        window.location.reload();
                    }
                }
            })
        }
    </script>

