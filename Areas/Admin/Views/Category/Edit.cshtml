@model WebBanHangOnline.Models.EF.Category
@{
    ViewBag.Title = "Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link"><i style="font-size: 20px; font-weight:bold; color:darkblue" class="fa fa-house-damage" aria-hidden="true"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">Danh mục</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link active">Cập nhật</a>
        </li>
    </ul>
}
<div style="height:2px; background-color: darkslategrey"></div>
<br />

<section class="content">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Thông tin cập nhật danh mục</h4>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Edit", "category", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(a => a.Id)
                    <!-- your steps content here -->

                    <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tiêu đề tin</label>
                            @Html.TextBoxFor(a => a.Title, new { @class = "form-control", @placeholder = "Tên Bài viết" })
                            @Html.ValidationMessageFor(a => a.Title, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Mô tả</label>
                            @Html.TextBoxFor(a => a.Alias, new { @class = "form-control", @placeholder = "Mô tả" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Thứ tự</label>
                            @Html.TextBoxFor(a => a.Position, new { @class = "form-control", @placeholder = "Thứ tự" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Hiển thị</label>
                            @Html.CheckBoxFor(a => a.IsActive)
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Link</label>
                            @Html.TextBoxFor(a => a.Link, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">SeoTitle</label>
                            @Html.TextAreaFor(a => a.SeoTitle, new { @class = "form-control", @placeholder = "SeoTitle" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">SeoKeywords</label>
                            @Html.TextAreaFor(a => a.SeoKeywords, new { @class = "form-control", @placeholder = "SeoKeywords" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">SeoDescription</label>
                            @Html.TextAreaFor(a => a.SeoDescription, new { @class = "form-control", @placeholder = "SeoDescription" })
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-4">
                                    <a class="btn btn-outline-danger rounded-pill" href="/admin/category/" style="width:100%"><i class="fa fa-fast-backward" aria-hidden="true"> Quay lại</i></a>
                                </div>
                                <div class="col-md-8">
                                    <button type="submit" class="btn btn-primary rounded-pill text-bold" style="width:100%">
                                        Cập nhật<i class="fa fa-spinner fa-pulse fa-fw"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>

    </div>
    <!-- /.card -->

</section>
@section scripts{
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('txtDetail', {
                customConfig: '/content/ckeditor/config.js',
                extraAllowedContent: 'span',
            });
        });
        function BrowseServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                document.getElementById(field).value = fileUrl;
            };
            finder.popup();
        }

    </script>
}

